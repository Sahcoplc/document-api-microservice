{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": ["airbnb-base", "prettier", "plugin:import/errors", "plugin:import/warnings"],
    "globals": {},
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "no-underscore-dangle": "off",
        "no-param-reassign": "off",
        "comma-dangle": "off",
        "max-len": [
            "error",
            {
                "code": 130
            }
        ],
        "no-unused-vars": 1,
        "no-console": 1,
        "no-plusplus": 0,
        "import/prefer-default-export": "off",
        "import/no-cycle": [2, { "maxDepth": 2 }],
        "eqeqeq": "off",
        "object-shorthand": "off",
        "func-names": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": ["node_modules", "src/"]
            }
        }
    }
}
